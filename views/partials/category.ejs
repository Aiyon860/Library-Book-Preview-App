<section class="bg-gray-50 py-8 antialiased dark:bg-gray-900 md:py-16">
  <div class="mx-auto max-w-screen-xl px-4 2xl:px-0">
    <div data-aos="fade-down" data-aos-duration="1000" class="mb-4 flex flex-col md:flex-row md:items-center justify-between gap-4 md:mb-8">
      <h2 class="text-xl font-semibold text-gray-900 dark:text-white sm:text-2xl">Peek by category</h2>

      <a href="/books" title="" class="flex justify-center items-center md:text-sm font-semibold text-gray-900 dark:text-white rounded-lg border-2 border-gray-200 bg-white py-3 px-4 hover:bg-gray-50 dark:border-gray-700 dark:bg-gray-800 dark:hover:bg-gray-700">
        See more categories
      </a>
    </div>

    <div class="grid gap-8 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4">
      <% categoryList.forEach((item) => { %>
      <a data-aos="flip-right" data-aos-duration="1000" href="#" class="flex flex-col gap-4 justify-center items-center rounded-lg border border-gray-200 bg-white px-4 py-4 hover:bg-gray-50 dark:border-gray-700 dark:bg-gray-800 dark:hover:bg-gray-700">
        <%- item[1] %>
        <span class="text-lg font-semibold text-gray-900 dark:text-white"><%= item[0] %></span>
      </a>
      <% }); %>
    </div>
  </div>
</section>